{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "./dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [
            "DOM",
            "ESNext"
        ]
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}